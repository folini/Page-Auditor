{
  "manifest_version": 3,

  "theme_color": "#000000",
  "background_color": "#ffffff",

  "lang": "en-US",
  "default_locale": "en",

  "name": "Page Auditor for Technical SEO",
  "description": "PageAuditor for Technical SEO is a project created by Franco Folini to analyze tracking codes, Structured Data, meta-tags, and more.",
  "version": "1.10.20",
  "categories": ["business", "education", "social"],

  "start_url": "/?fullscreen=yes",
  "scope": "/",

  "display_override": ["window-control-overlay", "fullscreen"],
  "display": "fullscreen",
  "orientation": "portrait",

  "shortcuts": [
    {
      "short_name": "Page Auditor",
      "name": "Page Auditor for Technical SEO",
      "description": "PageAuditor for Technical SEO is a project created by Franco Folini to analyze tracking codes, Structured Data, meta-tags, and more.",
      "url": "/?source=web",
      "icons": [
        {
          "src": "/assets/meta/android-icon-192x192.png", "sizes": "192x192",
          "256": "/assets/logos/Logo_256x256.png"
        }
      ]
    }
  ],

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_title": "Page Auditor for Technical SEO",
    "default_icon": {
        "256": "/assets/logos/Logo_256x256.png"
    },
    "default_popup": "default.htm"
  },

  "permissions": ["activeTab", "scripting"]

}
